// test/package.json
// テスト用の設定ファイル
{
  "name": "poker-mcp-tests",
  "version": "1.0.0",
  "description": "Unit tests for poker MCP server source operations",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:source": "jest sourceOperations.test.js",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "preset": "default",
    "testEnvironment": "node",
    "transform": {},
    "extensionsToTreatAsEsm": [".js"],
    "globals": {
      "jest": {
        "useESM": true
      }
    },
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "../src/**/*.js",
      "!../src/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
