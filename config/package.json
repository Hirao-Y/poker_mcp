{
  "name": "pokerinput-mcp-final",
  "version": "3.0.1",
  "description": "世界クラス YAML-based radiation shielding calculation input file management tool with enterprise-grade MCP support and complete production features",
  "main": "../src/mcp_server_final_fixed.js",
  "type": "module",
  "scripts": {
    "start": "cd .. && node src/mcp_server_final_fixed.js",
    "start:production": "cd .. && node src/mcp_server_final_fixed.js",
    "start:test": "cd .. && node src/mcp_server_test_final.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "health": "curl http://localhost:3020/health",
    "backup": "echo \"Backups are created automatically on applyChanges\"",
    "install-deps": "npm install",
    "dev": "cd .. && nodemon src/mcp_server_final_fixed.js",
    "clean": "cd .. && rm -rf logs/*.log && echo \"Logs cleaned\"",
    "check-structure": "cd .. && find . -maxdepth 2 -type d | sort"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "yaml",
    "radiation",
    "shielding",
    "poker",
    "nuclear",
    "geometry",
    "production"
  ],
  "author": "yoshihiro hirao",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/pokerinput-mcp-final"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "content-type": "^1.0.5",
    "cors": "^2.8.5",
    "express": "^5.0.1",
    "js-yaml": "^4.1.0",
    "raw-body": "^3.0.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "files": [
    "mcp_server_final_fixed.js",
    "mcp_server_test_final.js",
    "mcp_server.js",
    "mcp-manifest.json",
    "README.md",
    "tasks/",
    "backups/"
  ],
  "mcp": {
    "server": "mcp_server_final_fixed.js",
    "port": 3020,
    "endpoints": {
      "jsonrpc": "/mcp",
      "health": "/health",
      "root": "/"
    }
  }
}
