          },
          "max": {
            "type": "string",
            "description": "最大座標 (x y z形式) - RPP用"
          },
          "vertex": {
            "type": "string",
            "description": "頂点座標 (x y z形式) - BOX用"
          },
          "edge_1": {
            "type": "string",
            "description": "エッジ1ベクトル (x y z形式) - BOX用"
          },
          "edge_2": {
            "type": "string",
            "description": "エッジ2ベクトル (x y z形式) - BOX用"
          },
          "edge_3": {
            "type": "string",
            "description": "エッジ3ベクトル (x y z形式) - BOX用"
          },
          "expression": {
            "type": "string",
            "description": "組み合わせ式 - CMB用"
          },
          "transform": {
            "type": "string",
            "description": "適用する変換名"
          }
        },
        "required": ["name", "type"]
      }
    },
